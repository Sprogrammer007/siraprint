
<div class="col-lg-5 col-md-5 col-sm-5 col-lg-offset-2">

  <%- if(resource_name == :broker ) %>
  <h2>Login As Broker</h2>
  <%- else %>  
    <h2>Login As User</h2>
  <% end %>  
  <%- if(resource_name == :user ) %>
  <div>
    <%= link_to "Login as Broker", new_broker_session_path(), class: "btn btn-login" %>
  </div>
  <div class="or-divider">
    <span>Or</span>
    
  </div>
  <% end %> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <fieldset class="form-field mbs">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-input" %>
    </fieldset>

    <fieldset class="form-field mbs-m">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "form-input login" %>
    </fieldset>

    <fieldset class="form-field mbs-m">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <div class='pull-right'>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end -%>
      </div>
    
    </fieldset>

    <div class="mts mbs align-center ">
      <%= f.submit "Log in", class: "btn btn-submit" %>
      <p class="mtt tcg ts-m">
        Don't have an account?
        <%= link_to "Create a Account", new_user_registration_path  %> 
        <br/> 
     
      </p>
    </div>
  <% end %>
</div>
