.col-lg-5
  = form_tag url_for(:controller => 'orders', :action => 'create'), class: "large-prints-form", multipart: true do
    = hidden_field_tag '[order]product_type', 'large_print'
    = hidden_field_tag '[order]product_id', @large_print.id
    = hidden_field_tag '[order]product_rate', ''
    = hidden_field_tag '[order]total_price', ''
    = hidden_field_tag '[order]unit_price', ''

    .product-item-title
      %h2
        = @large_print.name
      .item-description
        = @large_print.description.html_safe()
    .product-item-size
      %h3 Step 1: Enter Desire Print Size
      .row.mgl
        .col-lg-2
          = label_tag "[order][details]unit", "Unit"
        .col-lg-10
          = select_tag '[order][details]unit', options_for_select(["inch", 'feet']), class: "form-control"
      .row
        .col-lg-2
          = label_tag "[order][details]width", "Width"
        .col-lg-4
          = number_field_tag "[order][details]width", nil, class: "product-width form-control", in: 1...100, :step => 0.1
        .col-lg-2
          = label_tag "[order][details]length", "Length"
        .col-lg-4
          = number_field_tag '[order][details]length', nil, class: "product-length form-control", in: 1...100, :step => 0.1
    .product-item-materials
      %h3 Step 2: Select Your Material
      %ol
        - @large_print.large_print_materials.each do |m|
          %li
            
            = radio_button_tag "[order][details]material_id", m.id
            %label{:for => "_order_detailsmaterial_id_#{m.id}"}
              = image_tag m.material_image.url()
              = m.material_name
    .product-item-thickness-options
    .product-item-upload.hidden
      %h3 Step 4: Upload Your Design
      .input-group
        = text_field_tag 'design_pdf_name', nil, class: "form-control", readonly: true 
        %span.input-group-btn
          %span.btn.btn-primary.btn-file
            Browse 
            = file_field_tag '[order]design_pdf', class: 'design_pdf'
    .product-item-final.hidden
      %h3 Step 5: Place Your Order
      .quantity-box
        .row.mgl
          .col-lg-6
            = label_tag '[order]quantity', "Number of Prints"
          .col-lg-6
            = number_field_tag '[order]quantity', 1, class: "quantity-field form-control", in: 1...10000
      .divider
      .per-price-box
        Cost Per Print:
        %span.per-placeholder
      .total-price-box
        Total Cost:
        %span.total-placeholder
      .divider
      .submit-order
        = button_tag "Place My Order", class: "btn btn-place-order"