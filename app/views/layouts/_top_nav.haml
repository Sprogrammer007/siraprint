%nav.navbar.navbar-inverse
  .btn-group.navbar-left
    %button.btn.btn-shop.btn-lg
      Shop By
      %strong
        Products
        %span.caret
    
  .navbar-header
    = button_tag "#", class: "navbar-toggle", data: {toggle: "collapse", target: "#32a"} do
      %span.sr-only
      %span.icon-bar
    = link_to image_tag('sira_print_logo.png'), root_path, class: "logo"

  .collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-right   
      %li
        = link_to "About", root_path
      %li
        = link_to "Help Center", help_path
      %li
        = link_to "Contact Us", contact_path
      - if user_signed_in?
        %li
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
            = "#{current_user.email}"
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to "Profile", user_profile_path(current_user)
            %li
              = link_to "My Orders", user_my_orders_path()
            %li.divider
            %li
              = link_to "Logout", destroy_user_session_path, method: "delete"
          %li.shopping-cart
            = link_to raw("<span class='glyphicon glyphicon-shopping-cart'></span><span class='badge'>#{badge_number}</span>"), cart_path(), class: "btn-cart"
      - else
        %li
          = link_to "Create Free Account", new_user_registration_path, class: "btn btn-top-nav btn-signup"
        %li
          = link_to "Sign in", new_user_session_path, class: "btn btn-top-nav btn-signin"

     

