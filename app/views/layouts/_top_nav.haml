%nav.navbar.navbar-inverse
  .container
    .navbar-header
      = button_tag "#", class: "navbar-toggle", data: {toggle: "collapse", target: "#32a"} do
        %span.sr-only
        %span.icon-bar
      = link_to image_tag('sira_print_logo.png'), root_path, class: "logo"

    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to "Products", root_path
        %li
          = link_to "About", root_path
          
        %li
          = link_to "Help", "#"
        - if user_signed_in?
          %li
            = link_to '#', data: { dropdown: 'notifications' } do
              %span.badge.pull-right 
                = "#{current_user.notifications_counts}"
              Messages
          %li.dropdown
            = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
              %span.caret
              = "#{current_user.username}"
            %ul.dropdown-menu
              %li
                = link_to "Profile", profile_path(current_user)
              %li
                = link_to "Settings", '#'
              %li.divider
              %li
                = link_to "Logout", destroy_user_session_path, method: "delete"
        - else
          %li
            = link_to "Sign in", new_user_session_path, class: "btn btn-login"


        %li
          = link_to raw('<span class="glyphicon glyphicon-shopping-cart"></span>'), "#", class: "btn-cart"

