%nav.navbar.navbar-default
  .container

    .navbar-header
      = button_tag "#", class: "navbar-toggle", data: {toggle: "collapse", target: "#32a"} do
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to image_tag('sira_print_logo.png'),root_path ,  class: "navbar-brand"
    .collapse.navbar-collapse
      %ul.nav.navbar-nav

        %li
          = link_to "About", about_path      
        %li
          = link_to "Contact", contact_path
        - if active_signed_in?
          %li
          %li.dropdown
            = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
              = "#{current_active.email}"
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to "Profile", profile_path(current_active)
              %li
                = link_to "My Orders", my_orders_path()
              %li.divider
              %li
                = link_to "Logout", destroy_session_path(current_active), method: "delete"
            %li.shopping-cart
              = link_to raw("<span class='glyphicon glyphicon-shopping-cart'></span><span class='badge'>#{badge_number}</span>"), cart_path(), class: "btn-cart"
        - else
          %li
            = link_to "Create Account", new_user_registration_path(), class: "btn btn-signup"
          %li
            = link_to "Login", new_user_session_path(), class: "btn-top-nav btn-signin"




