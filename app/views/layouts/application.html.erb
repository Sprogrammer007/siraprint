  <body>
    <head>
      <%= render 'layouts/top_nav' %>
    </head>
    <div class="clearfix"></div>
    <%= render 'shared/flash_notice'%>
    <%= render 'layouts/side_nav' %>


    <div class="row main-content" >
      <div class="col-lg-12">
        <%= yield %>
      </div>
      
    </div>
    <%= render 'layouts/footer' %>   
    

  </body>
</html>
